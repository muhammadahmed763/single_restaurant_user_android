<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/llbottom"
        android:src="@drawable/ic_order_successful" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llbottom"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/order_success"
            android:gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            tools:ignore="MissingPrefix" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="@string/your_order_has_been_successfully_placed_n_amp_will_be_process_by_system"
            android:gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            tools:ignore="MissingPrefix" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvProceed"
            android:fontFamily="@font/poppins_bold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_corner_white_10"
            android:backgroundTint="@color/light_green"
            android:gravity="center"
            android:text="@string/continue_shooping"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            tools:ignore="MissingPrefix" />
    </LinearLayout>
</RelativeLayout>